{
  "expo": {
    "name": "my-app",
    "slug": "my-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "corsProxy": {
        "domains": ["firebasestorage.googleapis.com"]
      },
      "meta": {
        "title": "개발자 김태훈",
        "viewport": "width=device-width, initial-scale=1",
        "appleMobileWebAppCapable": "yes",
        "appleMobileWebAppStatusBarStyle": "black-translucent",
        "appleMobileWebAppTitle": "개발자 김태훈",
        "description": "개발자 김태훈의 포트폴리오",
        "keywords": "개발자, 포트폴리오, 김태훈",
        "author": "김태훈",
        "ogType": "website",
        "ogSiteName": "개발자 김태훈",
        "ogTitle": "개발자 김태훈",
        "ogDescription": "개발자 김태훈의 포트폴리오",
        "ogImage": "https://devhun.kr/assets/images/favicon.png",
        "ogUrl": "https://devhun.kr",
        "twitterTitle": "개발자 김태훈",
        "twitterDescription": "개발자 김태훈의 포트폴리오",
        "image": "./assets/images/favicon.png",
        "themeColor": "#3b82f6", 
        "twitterCard": "summary_large_image", 
        "twitterCreator": "@taehun2" 
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
